<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundimage"
        android:orientation="vertical"
        tools:context=".activity.MainActivity"
        tools:ignore="UselessParent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:background="@color/background"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_profile"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_spn_bg"
                            android:elevation="@dimen/_5sdp"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_spn_bg"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/person" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_70sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:visibility="gone"
                                android:background="@drawable/custom_spn_bg"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_spn_bg"
                                    android:padding="@dimen/_3sdp"
                                    android:src="@drawable/equalizer" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_support"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                app:cardCornerRadius="5dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_spn_bg"
                                    android:padding="@dimen/_3sdp"
                                    android:src="@drawable/headset" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/custom_spn_bg"
                                app:cardCornerRadius="5dp">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llTimer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_spn_bg"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/img_timer"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:padding="@dimen/_3sdp"
                                        android:src="@drawable/timerwatch" />

                                    <TextView
                                        android:id="@+id/txtTimer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="sans-serif"
                                        android:gravity="center"
                                        android:text="10:00"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="normal" />

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:background="@color/black" />

                                    <ImageView
                                        android:id="@+id/imgAddTimer"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:padding="@dimen/_3sdp"
                                        android:src="@drawable/plus" />

                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/choose_new_pc"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_50sdp"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp"
                                android:background="@drawable/videobackground"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:padding="@dimen/_1sdp"
                                        android:src="@drawable/ut" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:src="@drawable/ubi" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:src="@drawable/stream" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:src="@drawable/rs" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:src="@drawable/epic" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:src="@drawable/logo" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:orientation="horizontal"
                                    android:paddingBottom="@dimen/_3sdp">

                                    <ImageView
                                        android:id="@+id/img_play"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:padding="@dimen/_1sdp"
                                        android:src="@drawable/play" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:text="Clean PC (EN)"
                                            android:textColor="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:text="You played last time"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/_10sdp" />
                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp" />

                </LinearLayout>


            </ScrollView>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>